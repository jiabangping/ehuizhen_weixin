	//addCookie(name,value,expiresHours){ 
	try {
	var Oversea = $("input:radio[name='Oversea']:checked").val();
//	alert("setOverSea="+Oversea);
	}catch(e){
		console.log(e);
	}
	addCookie("Oversea",Oversea,expiresHours);
